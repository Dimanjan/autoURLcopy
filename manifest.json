{
    "manifest_version": 3,
    "name": "Copy with Link",
    "version": "1.0",
    "description": "Automatically appends the webpage's link to copied text.",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "webRequest"
       
      ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icon.jpg"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.jpg"
      }
    }
    
  }
  